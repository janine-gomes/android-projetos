<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="4dp"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp"
    android:background="@color/md_grey_200">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="@dimen/lc_card_height"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="@dimen/cardview_default_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e91e63">

            <TextView
                android:id="@+id/lc_cep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="@color/md_white_1000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lc_tv_rua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="@color/md_white_1000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lc_cep" />

            <TextView
                android:id="@+id/lc_tv_bairro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="@color/md_white_1000"
                app:layout_constraintBottom_toBottomOf="@+id/lc_tv_rua"
                app:layout_constraintStart_toEndOf="@+id/lc_tv_rua"
                app:layout_constraintTop_toTopOf="@+id/lc_tv_rua"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/lc_tv_municipio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="@color/md_white_1000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lc_tv_rua" />

            <TextView
                android:id="@+id/lc_tv_estado"
                android:layout_width="56dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:text="TextView"
                android:textColor="@color/md_white_1000"
                app:layout_constraintBottom_toBottomOf="@+id/lc_tv_municipio"
                app:layout_constraintStart_toEndOf="@+id/lc_tv_municipio"
                app:layout_constraintTop_toTopOf="@+id/lc_tv_municipio"
                app:layout_constraintVertical_bias="0.0" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>